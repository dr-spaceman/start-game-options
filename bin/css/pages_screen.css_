#foot .container { margin:0; }

#pghead { padding:0 40px;}

#pgnav {
	width:930px; height:28px;
	padding:15px 0 0;
}
	#pgnav UL {
		margin:0 0 0 -10px;
		padding: 0;
		text-align: right;
		list-style: none;
	}
	#pgnav LI {
		margin: 0;
		padding: 0;
		float: left;
	}
	#pgnav LI A {
		display: block;
		margin: 0 1px;
		padding: 5px 10px;
		border-color: transparent;
		border-style: solid;
		border-width: 1px; border-radius:8px 8px 0 0; -moz-border-radius:8px 8px 0 0; -webkit-border-radius:8px 8px 0 0;
		font-size: 14px;
		text-decoration: none;
		color:#777;
		opacity:.8;
	}
	#pgnav LI > A:HOVER { color:#444; background-color:#DDD; background-image:none; }
	#pgnav UL LI:first-child A {}
	#pgnav LI H3 { margin:0; padding:0; font-weight:normal; border-width:0; }
	#pgnav LI H3 A {
		margin:0 10px;
		padding:5px 15px;
		color: #555;
		border-color:#E5E5E5 #E5E5E5 transparent;
		background: transparent url(/bin/img/whitebg.70.png) repeat 0 0 !important;
		opacity:1;
	}
	#pgnav .edit SPAN, #pgnav .fan SPAN {
		padding-left:16px;
		color:#06C;
		background:url(/bin/img/med_edit.png) no-repeat 0 2px;
	}
	#pgnav .edit:HOVER, #pgnav .fan:HOVER { color:#39F; }

#pgbody {
	margin:0;
	border-width:0 0 1px; border-style:solid; border-color:#DDD;
	background:transparent url(/bin/img/whitebg.70.png) repeat 0 0;
}
#pgbody > .container { position:relative; padding:30px 40px; }

.overview H3 { margin:20px 0 5px; font:normal 18px Arial; white-space:nowrap; min-width:200px; }
.overview H4 { margin:10px 0 3px; }
	.overview H3 + H4 { margin:0 0 3px; }
.overview H5 { margin:2em 0 1em; font-weight:bold; font-size:16px; }

.overview UL { margin:0; padding:0; list-style:none; }
.overview UL LI { padding:1px 0 1px 16px; background:url(/bin/img/bullet-square.png) no-repeat 5px 7px; }
.overview A.edit {
	float:right;
	display:block;
	padding:1px 5px;
	text-decoration:none; text-transform:uppercase;
	background-color:#F5F5F5;
	border:1px solid #DDD; border-radius:2px; -moz-border-radius:2px; -webkit-border-radius:2px;
}
.overview A.edit:HOVER { border-color:#39F; }

.overview .liquid2, .overview .liquid3 { margin-right:330px !important; }
.overview .liquid3 { margin-left:250px !important; }
.pgt-person .liquid2r, .pgt-person .liquid3 { margin-left:280px !important; }
.overview .liquidrcol { width:300px; float:right; clear:right; }

.redirnote {
	float: left;
	margin: 12px 21px 5px 0;
	padding: 3px 8px 3px 22px;
	border: 1px solid #FFFF9F;
	border-radius:3px; -moz-border-radius:3px; -webkit-border-radius:3px;
	background: #FFFFC4 url(/bin/img/arrow-down-right.png) no-repeat 8px 6px;
}

#pgdetails {
	float: left;
	margin: 0 20px 20px 0;
}
.pgt-person #pgdetails { margin:0 10px 40px -30px; }

.profpic {
	position: relative;
	width: 298px;
	height: 324px;
	margin: -20px 0 -20px 0;
}
.profpic SPAN {
	position: absolute;
	width: 298px;
	height: 324px;
	background: url(/bin/img/frame_150x175.png) no-repeat 0 0;
}
.profpic IMG {
	margin: 75px 0 0 74px;
}

.primpub {
	margin: 10px 20px 20px 0;
}
.primpub A {
	display: block;
	width: 200px;
	overflow: hidden;
	text-indent: -5000px;
	background-color:#EEE; background-repeat:no-repeat; background-position:0 0;
	border-radius:4px; -moz-border-radius:4px; -webkit-border-radius:4px;
	box-shadow:0 1px 4px #333; -moz-box-shadow:0 1px 4px #333; -webkit-box-shadow:0 1px 4px #333;
}
.primpub IMG { border-width:0 !important; }

.repimg { margin:10px 20px 20px 0; }

#pgcont { line-height:1.6em; }
#pgcont P { line-height:1.5em; margin:0.4em 0 1em; }
#pgcont BIG { font-size:16px; }
#pgcont A.pglink { text-decoration:none; }
#pgcont A.pglink:HOVER { text-decoration:underline; }
#pgcont H5 + *, #pgcont H6 + * { margin-top:0; }
#pgcont H5 { margin-bottom:4px; padding-bottom:1px; font-size:18px; font-weight:normal; border-bottom:1px solid #CCC; }
#pgcont H6 { margin:8px 2px; font-size:15px; font-weight:bold; }

#sblogposts { margin:40px -40px 0; padding:40px !important; background:url(/bin/img/pgsec_blue.5.png) repeat-x 0 0; }
#sblogposts H3 { display:none; }
#sblogposts .news-shortlist {}
