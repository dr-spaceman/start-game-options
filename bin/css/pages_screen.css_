#bodywrap { padding:0 !important; }

.pgsec > .container { padding:0; }

#pgsecbuff > DIV { height:0 !important; }

#pgwrap { /* contains page bg img */
	padding: 110px 0 20px;
	background-position: right top;
	background-repeat: no-repeat;
}

#head { width:auto !important; right:20px; left:20px; }
