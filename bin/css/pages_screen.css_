#sblogposts .news-shortlist + .more{ margin:0 0 0 19px; font-weight:bold; }
#sblogposts .item + .more { display:none; }

#forumtopics {}
#forumtopics .more { padding:0 0 0 20px; font-weight:bold; }

#publications { clear:both; margin:40px 0 0; }
#publications H3 { display:none; }
#publications A.trav {
	position:absolute; z-index:5; top:10px;
	width:25px; height:25px;
	padding: 0 !important;
	background-color: white !important;
	background-position: 10px 10px !important;
	border-radius:25px; -moz-border-radius:25px; -webkit-border-radius:25px;
	opacity:.6;
}
#publications A.trav:HOVER { opacity:1; }
#publications > .container {
	position:relative;
	margin:0 -40px;
	border-width:2px 0; border-style:solid; border-color:black;
	overflow:hidden;
	background:url(/bin/img/bg-wood.jpg) repeat-x left bottom;
}
#publications > .container > .overlay {
	position:absolute; top:0; right:0; bottom:0; left:0;
}
#pubframe {}
#publications DL {
	float:left;
	position:relative; z-index:4;
	width:170px;
	margin: 10px 0 0 30px;
}
#publications DL.hov {}
#publications DT {
	position:absolute; bottom:23px;
	padding:15px 15px 0;
}
#publications DT A { display:block; position:relative; z-index:2; }
#publications DT A SPAN { visibility:hidden; }
#publications DT .overlay {
	position:absolute; top:0; bottom:0; left:0; right:0;
	background:url(/bin/img/gamebox_overlay.png) no-repeat 0 0;
}
#publications DD {
	position:absolute; z-index:3;
	min-width:141px;
	margin:0 7px 30px;
	padding:4px 8px;
	font-size:12px; color:#999;
	line-height:1.5em;
	background-color:black;
	opacity:0;
	border-radius:3px; -moz-border-radius:3px; -webkit-border-radius:3px;
	box-shadow:0 0 4px #111; -moz-box-shadow:0 0 4px #111; -webkit-box-shadow:0 0 4px #111;
}
#publications .hov DD {}
#publications H5 { margin:0; padding:0; font-weight:bold; font-size:14px; color:white; }
#publications .speechpt {
	position:absolute; bottom:-5px;
	width:10px; height:5px;
	background:url(/bin/img/speech_point_black.png) no-repeat center bottom;
}

#credits { margin:40px 0 0; }
#credits H3 { display:none; }
#credits TABLE { min-width:75%; border-bottom: 1px solid #C0C0C0; }
	#credits TD.cr-title {}
	#credits TD.spanned { display:none; }
	#credits .cr-pf { float:right; color:#999; }
	#credits .cr-release {
		width: 61px;
		text-align: center;
	}
	#credits .cr-role { border-left-width:0 !important; }
	#credits .cr-notes { color:#888; }
		#credits TD.cr-notes { max-width:250px; }
		.cr-notes A:link, .cr-notes A:visited {
			color: #888;
			font-weight: normal ! important; }
		.cr-notes A:hover {
			color: #333;
			font-weight: normal ! important; }
#credits DL { margin:0; padding:0; font-size:15px; }
	#credits .toggle { display:none; }
	#credits DL DT {
		width:48%; height:17px;
		float:left;
		text-align:right;
		margin:0 2% 0 0;
		padding:10px 0 0; }
	#credits DL.toggled.vital DT { font-weight:bold; }
	#credits DL DD {
		margin:0 0 0 50%;
		padding:3px 0 0;
	}
	#credits DL DT + DD { padding-top:10px; }
	#credits DL DD.notes {
		padding-top: 0;
		font-size: 12px;
		color: #999;
	}
	#credits DL DD.notes A { color:#888; }
	#credits DL DD.notes A:HOVER { color:#999; }
#togglecreds {
	position:relative;
	width:167px;
	margin:10px 0 0;
	background-color:white;
	border:1px solid #DDD; border-radius:2px; -moz-border-radius:2px; -webkit-border-radius:2px;
	box-shadow:0 0 4px #ccc; -moz-box-shadow:0 0 1em #eee; -webkit-box-shadow:0 0 4px #ccc;
}
#togglecreds A { display:block; padding:10px 15px; text-decoration:none; color:#888; }
#togglecreds A U { text-decoration:underline; color:#06C; }
#togglecreds A:HOVER U { color:#39F; }
#togglecreds .speechpt {
	position:absolute; top:14px; left:-10px;
	width:10px; height:10px;
	background:url(/bin/img/speech_point_white_borderddd.png) no-repeat -1px 0;
}

#forumtopics UL { list-style:none; padding:0; }
#forumtopics LI { margin:6px 0 !important; padding-left:20px !important; background:url(/bin/img/icons/comments.gif) no-repeat 3px 4px !important; }
#forumtopics LI.unread { background-image:url(/bin/img/icons/comments-new.gif); }

